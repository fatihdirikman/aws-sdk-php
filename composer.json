{
    "name": "aws/sdk",
    "require": {
        "php": ">=5.3.2",
        "ext-curl": "*",
        "guzzle/guzzle": "2.7.*",
        "mozilla/cacert": "*"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "mozilla/cacert",
                "version": "1.8.2",
                "dist": {
                    "url": "http://curl.haxx.se/ca/cacert.pem",
                    "type": "file"
                }
            }
        }
    ],
    "require-dev": {
        "symfony/class-loader": "*",
        "doctrine/common": "*",
        "monolog/monolog": "*"
    },
    "autoload": {
        "psr-0": {
            "Aws": "src/"
        }
    }
}
