{% extends "default/layout/layout.twig" %}

{% block head %}
    {{ parent() }}
    <style>
        .parameter h4 .label {margin-left: 8px;}
        .result .required {display: none;}
        a.anchor-link {visibility: hidden;}
        h2:hover a.anchor-link, h3:hover a.anchor-link, h4:hover a.anchor-link {visibility: visible;}
        .awsicon {
            background-image: url('img/service-sprites.png');
            background-repeat: no-repeat;
            width: 24px; height: 24px;
            display: inline-block;
            margin-bottom: -6px;
        }
        .awsicon-s3 {background-position: -96px 0;}
        .awsicon-dynamodb {background-position: -128px 0;}
        .awsicon-glacier {background-position: -640px 0;}
        .awsicon-ec2 {background-position: 0 0;}
        pre.opcode {font-size: 150%;}
        pre.opcode code {color: #c7254c; font-weight: bold;}
    </style>
{% endblock %}
